{
  "name": "agentsmith",
  "version": "1.0.0",
  "description": "Auto-generate AGENTS.md from your codebase",
  "type": "module",
  "bin": {
    "agentsmith": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts",
    "dev": "tsup src/cli.ts --format esm --watch",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agents",
    "agents.md",
    "context",
    "cli",
    "codebase",
    "llm",
    "cursor",
    "copilot",
    "claude"
  ],
  "author": "Jason Poindexter",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpoindexter/agentsmith.git"
  },
  "homepage": "https://github.com/jpoindexter/agentsmith#readme",
  "bugs": {
    "url": "https://github.com/jpoindexter/agentsmith/issues"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cac": "^6.7.14",
    "clipboardy": "^5.2.1",
    "fast-glob": "^3.3.0",
    "picocolors": "^1.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}
